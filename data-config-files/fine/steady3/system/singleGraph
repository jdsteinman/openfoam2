FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cell;

setFormat       raw;

writeControl    writeTime; // this ensures that it's writing only at writeInterval

sets
(

    // make sure to change (x1 y1 z1) and (x2 y2 z2) to
    // the coordinates of the start and end points
     line0 
    {
        type    lineCell;
        axis    xyz;
        start   (0.0  0.0 0.0);
        end     (100.0 0.0 0.0);
    }


    lineP_4 
    {
        type    lineCell;
        axis    xyz;
        start   (0.0    0.0     0.0);
        end     (100.0  100.0   0.0);
    }

    lineP_2 
    {
        type    lineCell;
        axis    xyz;
        start   (0.0 0.0   0.0);
        end     (0.0 100.0 0.0);
    }

    line3P_4 
    {
        type    lineCell;
        axis    xyz;
        start   (0.0     0.0     0.0);
        end     (-100.0  100.0   0.0);
    }
);

fields          ( p U );


